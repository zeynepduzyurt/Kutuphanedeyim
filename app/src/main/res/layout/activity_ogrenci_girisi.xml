<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/gebackground"
>

    <ImageView
        android:layout_width="276dp"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/oglogo2" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:weightSum="1"
        android:layout_marginTop="170dp">



        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/oguserlogo"
            android:layout_weight="0.5"/>




        <EditText
            android:layout_marginTop="2dp"
            android:id="@+id/epostagiris"
            android:layout_weight="0.5"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:hint="E-posta" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginTop="19dp"
            android:layout_weight="0.5"
            android:background="@drawable/ogkilit" />


            <EditText
                android:id="@+id/sifregiris"
                android:inputType="textPassword"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:hint="Åžifre" />

    </LinearLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ogforgot"
        android:id="@+id/sifreunutma"/>

    <Button
        android:textAllCaps="true"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginLeft="90dp"
        android:id="@+id/girisyap"
        android:background="@drawable/oggiris"/>

    <ImageView
        android:layout_width="220dp"
        android:layout_height="15dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/yada"/>

    <com.google.android.gms.common.SignInButton
        android:layout_marginLeft="90dp"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/sign_in_button"/>

<Button
    android:id="@+id/hesabinyokmu"
    android:layout_width="180dp"
    android:layout_height="18dp"
    android:layout_marginTop="20dp"
    android:layout_gravity="center"
    android:background="@drawable/oghesap"/>

</LinearLayout>
